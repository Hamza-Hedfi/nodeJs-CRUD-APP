<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/email.css">
</head>

<body>
   <%- include('includes/navigation.ejs') %>

    <main>
        <form class="email-form" action="/<% if (editing) { %>edit-email<% } else { %>add-email<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= email.name %><% } %>" required>
            </div>
            <div class="form-control">
                <label for="email">E-mail</label>
                <input type="email" name="email" id="email" value="<% if (editing) { %><%= email.email %><% } %>" required>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= email._id %>" name="emailId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Email<% } else { %>Add Email<% } %></button>
        </form>
    </main>
<%- include('includes/end.ejs') %>